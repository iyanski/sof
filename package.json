{
    "name": "sof-api",
    "version": "1.0.0",
    "description": "A simplified shipment and logistics offer system",
    "main": "dist/index.js",
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "ts-node src/index.ts",
        "test": "jest",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\""
    },
    "keywords": [
        "shipment",
        "logistics",
        "api",
        "typescript"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "@types/swagger-jsdoc": "^6.0.4",
        "@types/swagger-ui-express": "^4.1.8",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "reflect-metadata": "^0.2.2",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.35.0",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.14",
        "@types/node": "^20.10.0",
        "@typescript-eslint/parser": "^8.14.0",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.0",
        "globals": "^16.3.0",
        "jest": "^29.7.0",
        "jiti": "^2.5.1",
        "ts-jest": "^29.4.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.3.2",
        "typescript-eslint": "^8.43.0"
    },
    "jest": {
        "preset": "ts-jest",
        "testEnvironment": "node",
        "roots": [
            "<rootDir>/src"
        ],
        "testMatch": [
            "**/__tests__/**/*.ts",
            "**/?(*.)+(spec|test).ts"
        ],
        "transform": {
            "^.+\\.ts$": "ts-jest"
        },
        "collectCoverageFrom": [
            "src/**/*.ts",
            "!src/**/*.d.ts"
        ],
        "moduleFileExtensions": [
            "ts",
            "js",
            "json"
        ]
    }
}
